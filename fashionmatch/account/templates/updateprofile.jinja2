{% extends "base.jinja2" %}
{% block extrastyles %}<link rel="stylesheet" href="{{url_for('account_bp.static', filename='account.css')}}">{% endblock %}
{% block main %}

    <div id="bg">

    <div class="centre">

        <form method="POST" style="display:block;">
            <h2>Update Profile details</h2>

            <label>Email</label>
            <input type="email" id="email" name="email" placeholder = "email" value="{{resp.email}}" required><br>

            <label>First Name</label>
            <input type="text" id="firstName" name="firstName" placeholder = "firstName" value="{{resp.firstname}}" required><br>

            <label>Last Name</label>
            <input type="text" id="lastName" name="lastName" placeholder = "lastName" value="{{resp.lastname}}" required><br>

            <label>Address</label>
            <input type="text" id="address" name="address" placeholder = "address"  value="{{resp.address}}" required><br><br>
        
            <label>Coord - Latitude</label>
            <input type="text" id="coordlat" name="coordlat" placeholder = "coordlat"  value="{{resp.coordlat}}" required><br><br>
            
            <label>Coord - Longitude</label>
            <input type="text" id="coordlong" name="coordlong" placeholder = "coordlong"  value="{{resp.coordlong}}" required><br><br>

            <label>Profile Picture URL</label>
            <input type="url" id="profilepicturelink" name="profilepicturelink" placeholder = "profilepicturelink"  value="{{resp.profilepicturelink}}" required><br><br>


            <input type="submit" value="Submit">

            </form> 
        </div>
    </div>


{% endblock %}
